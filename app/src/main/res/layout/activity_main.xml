<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.example.myview.PieView
            android:layout_width="200dp"
            android:layout_height="200dp" />

        <com.example.myview.RadarView
            android:layout_width="100dp"
            android:layout_height="100dp" />
        <com.example.myview.ShawdowLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:round_corner_top_left="100dp"
            app:round_corner_bottom_left="100dp"
            app:shadow_width="3dp"
            app:shadow_color="#20000000"
            app:clip_background="true"
            android:padding="30dp">

            <ImageView
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:src="@drawable/image"
                android:scaleType="centerCrop"/>
        </com.example.myview.ShawdowLayout>


    </LinearLayout>

</android.support.constraint.ConstraintLayout>